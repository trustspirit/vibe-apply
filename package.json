{
  "name": "vibe-apply",
  "version": "1.0.0",
  "description": "Vibe Apply - Mission application management system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "frontend:dev": "pnpm --filter frontend dev",
    "backend:dev": "pnpm --filter backend start:dev",
    "frontend:build": "pnpm --filter frontend build",
    "backend:build": "pnpm --filter backend build",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "pnpm --recursive run format",
    "format:check": "pnpm --recursive run format:check",
    "typecheck": "pnpm --recursive run typecheck"
  },
  "keywords": ["vibe", "apply", "mission", "management"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f"
}